{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "./__test__/**/*", ".eslintrc.json", "jest.config.ts"],
  "exclude": ["./__test__/**/*", ".eslintrc.json", "jest.config.ts"]
}
